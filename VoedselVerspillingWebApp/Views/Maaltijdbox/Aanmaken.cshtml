@using Domain
@model Domain.MealBox

@{
    ViewBag.Title = "Maaltijdbox Aanmaken";
}


<h2 class="text-center">Maak Een Nieuwe Maaltijdbox</h2>
<div class="w-75 mx-auto">
    <form method="post" asp-action="Aanmaken">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="MealBoxName" class="form-label">Naam</label>
            <input asp-for="MealBoxName" type="text" class="form-control" id="mealBoxNameInput">
            <div id="mealBoxNameInputHint" class="form-text">Een unieke omschrijvende naam voor de maaltijdbox.</div>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">Stad</label>
            <select asp-for="City"
                    class="form-control"
                    asp-items="Html.GetEnumSelectList<City>()">
                <option>Stad ...</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="PickupDateTime" class="form-label">Ophaaldatum</label>
            <input asp-for="PickupDateTime" type="date" class="form-control" id="PickupDateTime">
        </div>

        <div class="mb-3">
            <label asp-for="ExpireTime" class="form-label">Verloopdatum</label>
            <input asp-for="ExpireTime" type="date" class="form-control" id="mealBoxNameInput">
        </div>

        <div class="mb-3 form-check">
            <input asp-for="EighteenPlus" type="checkbox" class="form-control" id="mealBoxNameInput">
            <label asp-for="EighteenPlus" class="form-check-label" >Bevat producten die 18+ zijn</label>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Prijs</label>
            <input asp-for="Price" type="number" class="form-control" id="PriceInput" name="PriceInput" min="0.00" max="10000.00" step="0.01"/>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">Type</label>
            <select asp-for="City"
                    class="form-control"
                    asp-items="Html.GetEnumSelectList<MealType>()">
                <option>Type maaltijdbox ...</option>
            </select>
        </div>


        <div class="mb-3">
            <label asp-for="Canteen" class="form-label">Kantine</label>
            <select asp-for="CanteenId">
                @foreach (var c in @ViewBag.Canteens)
                {
                    <option value="@c.Id" >@c.Address</option>
                }
                <option >Kantine ...</option>
            </select>
        </div>


        <button type="submit" class=" btn btn-outline-success">Aanmaken</button>
    </form>
</div>