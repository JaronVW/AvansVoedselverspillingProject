@using Domain
@model MealBoxViewModel

@{
    ViewBag.Title = "Maaltijdbox Aanmaken";
}


<h2 class="text-center">Maak Een Nieuwe Maaltijdbox</h2>
<div class="w-75 mx-auto">
    <form method="post" asp-action="Aanmaken">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="col text-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div class="mb-3">
            <label asp-for="MealBoxName" class="form-label">Naam</label>
            <input asp-for="MealBoxName" type="text" class="form-control" id="mealBoxNameInput">
            <div id="mealBoxNameInputHint" class="form-text">Een unieke omschrijvende naam voor de maaltijdbox.</div>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">Stad</label>
            <select asp-for="City"
                    class="form-control"
                    asp-items="Html.GetEnumSelectList<City>()">
                <option>Stad ...</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="PickupDateTime" class="form-label">Ophaaldatum</label>
            <input asp-for="PickupDateTime" type="datetime-local" class="form-control" id="PickupDateTime">
        </div>

        <div class="mb-3">
            <label asp-for="ExpireTime" class="form-label">Verloopdatum</label>
            <input asp-for="ExpireTime" type="datetime-local" class="form-control" id="mealBoxNameInput">
        </div>

        <div class="mb-3 form-check">
            <input asp-for="EighteenPlus" type="checkbox" class="form-check-input" id="mealBoxNameInput">
            <label asp-for="EighteenPlus" value="true" class="form-check-label">Bevat producten die 18+ zijn</label>
            <input type="hidden" value="false" asp-for="EighteenPlus">
        </div>

        <div class="mb-3 form-check">
            <input asp-for="WarmMeals" type="checkbox" class="form-check-input" id="mealBoxNameInput">
            <label asp-for="WarmMeals" value="true" class="form-check-label">Bevat warme maaltijden</label>
            <input type="hidden" value="false" asp-for="EighteenPlus">
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Prijs</label>
            <input asp-for="Price" type="number" class="form-control" id="PriceInput" min="0.00" max="10000.00" step="0.01"/>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">Type</label>
            <select asp-for="City"
                    class="form-control"
                    asp-items="Html.GetEnumSelectList<MealType>()">
                <option>Type maaltijdbox ...</option>
            </select>
        </div>


        <div class="mb-3">
            <label asp-for="CanteenId" class="form-label">Kantine</label>
            <select asp-for="CanteenId" class="form-control">
                @foreach (var c in @ViewBag.Canteens)
                {
                    <option value="@c.Id">@c.Address</option>
                }
                <option selected="selected">Kantine ...</option>
            </select>
        </div>

        <div class="mb-3">
            Beschikbare voorbeeldproducten:
            @foreach (var p in Model.ProductCheckBoxes)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" checked="@p.IsChecked" name="selectedProducts" value="@p.Id" id="@p.Id">
                    <label class="form-check-label" for="@p.Id">
                        @p.Name
                    </label>
                </div>
            }
        </div>


        <button type="submit" class=" btn btn-outline-success">Aanmaken</button>
    </form>
</div>