@{
    ViewData["Title"] = "Beschikbare Maaltijdboxen";
}
@model IEnumerable<Domain.MealBox>


<h1>Beschikbare maaltijdboxen</h1>

@foreach (var m in Model)
{
    <div>
        <h3>@m.MealBoxName</h3>
        <ul>
            <li>@m.City , @m.Canteen</li>
            <li>@m.PickupDateTime</li>
            <li>@m.Price</li>
        </ul>
        <a asp-controller="Maaltijdbox" asp-action="BoxDetails" asp-route-id="@m.Id"><button >Details</button></a>
        
    </div>
}